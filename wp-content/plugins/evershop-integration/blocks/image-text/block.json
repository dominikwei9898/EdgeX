{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "evershop/image-text",
  "title": "Image + Text",
  "category": "evershop",
  "icon": "align-pull-left",
  "description": "Display an image alongside text content with optional call-to-action button.",
  "keywords": ["image", "text", "media", "cta", "evershop"],
  "textdomain": "evershop-integration",
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imagePosition": {
      "type": "string",
      "default": "left"
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "buttonText": {
      "type": "string",
      "default": ""
    },
    "buttonUrl": {
      "type": "string",
      "default": ""
    }
  },
  "example": {
    "attributes": {
      "title": "Premium Quality Ingredients",
      "content": "Our products are made with the finest ingredients, carefully selected for maximum effectiveness.",
      "imagePosition": "left"
    }
  }
}

